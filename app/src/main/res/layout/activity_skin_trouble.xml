<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <include layout="@layout/toolbar_skin_info" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/colorExplainBackGround"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;피부고민 사항을 선택해주세요.&quot;"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="( 최대 3개 / 고민이 없을 경우 없음만 선택 가능 )"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble1_darkcircle"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다크서클"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble2_blackhead"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="블랙헤드"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble3_pore"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모공"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble4_deadskin"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="각질"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble5_sensitivity"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="민감성"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble6_wrinkle"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주름"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble7_acne"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여드름/트러블"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="33.5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble8_flush"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안면홍조"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/trouble3_pore"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="없음"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlackText"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_loading_indicator" android:id="@+id/indicator" />

</android.support.design.widget.CoordinatorLayout>