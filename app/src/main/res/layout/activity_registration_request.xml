<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout2">

        <include layout="@layout/toolbar_registration_request" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="?attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/cosmetics"/>
            <TextView
                android:layout_above="@+id/input_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:text="원하는 화장품 정보를 작성해주세요 :)"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/input_area"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="브랜드"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccentLight"/>
            <EditText
                android:id="@+id/ET_brand"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="브랜드를 입력해주세요."
                android:singleLine="true"
                android:textSize="14sp"
                android:maxLength="50"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="18.5dp"
                android:paddingRight="18.5dp"
                android:background="@drawable/cosmetic_user_rectangle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22.5dp"
                android:layout_marginBottom="14dp"
                android:text="화장품"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccentLight"/>
            <EditText
                android:id="@+id/ET_cosmetic"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:hint="화장품명을 입력해주세요."
                android:singleLine="true"
                android:textSize="14sp"
                android:maxLength="50"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="18.5dp"
                android:paddingRight="18.5dp"
                android:background="@drawable/cosmetic_user_rectangle"/>
            <Button
                android:id="@+id/BT_request"
                android:layout_below="@+id/input_area"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                android:text="등록 요청하기"
                android:textColor="#FFFFFF"
                android:textSize="14.5sp"
                android:textStyle="bold"
                android:background="@drawable/large_btn_shadow"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>