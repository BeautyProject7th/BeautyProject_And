<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="11dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="150dp">

    <FrameLayout
        android:id="@+id/FL_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2.5dp"
        android:background="@drawable/ic_oval_7"
        android:layout_marginLeft="19.2dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/IV_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/TV_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="#39393a"
        android:layout_marginLeft="3.8dp"
        android:textSize="13sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/FL_user" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:minHeight="150dp"
        android:background="@drawable/ic_combined_shape"
        android:orientation="horizontal"
        android:id="@+id/LL_user">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8.5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/LL_skin_type"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18.5dp">
                <ImageView
                    android:id="@+id/IV_skin_type"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/TV_skin_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#4a4a4a"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_skin_trouble_1"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18.5dp">

                <ImageView
                    android:id="@+id/IV_skin_trouble_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/TV_skin_trouble_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#4a4a4a"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_skin_trouble_2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18.5dp">
                <ImageView
                    android:id="@+id/IV_skin_trouble_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/TV_skin_trouble_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#4a4a4a"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_skin_trouble_3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18.5dp">
                <ImageView
                    android:id="@+id/IV_skin_trouble_3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/TV_skin_trouble_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#4a4a4a"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/FF_follow"
                android:layout_width="35.5dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/IV_follow"
                    android:layout_width="25.5dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/find_user_btn_blank"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>