        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:id="@+id/BT_push_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="푸쉬 알림 설정 / 해제"
                android:textColor="@color/colorBlackText"
                android:gravity="center_vertical"
                android:textSize="15sp"/>
            <Switch
                android:id="@+id/push_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/BT_skin_type"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피부타입 재설정"
                android:textColor="@color/colorBlackText"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/move_btn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/BT_skin_trouble"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피부고민 재설정"
                android:textColor="@color/colorBlackText"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/move_btn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/BT_agreement"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관"
                android:textColor="@color/colorBlackText"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/move_btn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/BT_privacy_rule"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 취급방침"
                android:textColor="@color/colorBlackText"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/move_btn" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/BT_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:textColor="@color/colorBlackText"
                android:textSize="15sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/move_btn" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>