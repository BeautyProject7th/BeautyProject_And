<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_nothing" android:id="@+id/cs_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/LL_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="?attr/actionBarSize">
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                    <ImageView
                        android:id="@+id/IV_user"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/TV_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="user_name"
                        android:textSize="13sp"
                        android:textColor="#000000"/>
                    <RelativeLayout
                        android:layout_width="344dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/ic_card">
                        <TextView
                            android:id="@+id/TV_face_recognition_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:text="얼굴 인식 결과"
                            android:textStyle="bold"
                            android:textColor="#4a494a"
                            android:textSize="13sp"/>
                        <LinearLayout
                            android:id="@+id/LL_face_features"
                            android:layout_below="@id/TV_face_recognition_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7.5dp"
                            android:layout_marginLeft="27.5dp">
                            <LinearLayout
                                android:id="@+id/LL_face_feature_1"
                                android:orientation="vertical"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/rectangle_18_copy_2"
                                android:paddingBottom="5dp">
                                <ImageView
                                    android:id="@+id/IV_face_feature_1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentTop="true"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Face"
                                    android:textSize="9sp"
                                    android:textColor="#4a4a4a"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/LL_face_feature_2"
                                android:orientation="vertical"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_marginRight="8dp"
                                android:paddingBottom="5dp">
                                <ImageView
                                    android:id="@+id/IV_face_feature_2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentTop="true"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eye"
                                    android:textSize="9sp"
                                    android:textColor="#4a4a4a"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/LL_face_feature_3"
                                android:orientation="vertical"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_marginRight="8dp"
                                android:paddingBottom="5dp">
                                <ImageView
                                    android:id="@+id/IV_face_feature_3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentTop="true"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Eyebrow"
                                    android:textSize="9sp"
                                    android:textColor="#4a4a4a"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/LL_face_feature_4"
                                android:orientation="vertical"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_marginRight="8dp"
                                android:paddingBottom="5dp">
                                <ImageView
                                    android:id="@+id/IV_face_feature_4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentTop="true"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nose"
                                    android:textSize="9sp"
                                    android:textColor="#4a4a4a"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/LL_face_feature_5"
                                android:orientation="vertical"
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_marginRight="8dp"
                                android:paddingBottom="5dp">
                                <ImageView
                                    android:id="@+id/IV_face_feature_5"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@android:color/transparent"
                                    android:layout_alignParentTop="true"/>
                                <TextView
                                    android:layout_marginTop="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lip"
                                    android:textSize="9sp"
                                    android:textColor="#4a4a4a"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/TV_face_evaluation"
                            android:layout_marginTop="7dp"
                            android:layout_below="@id/LL_face_features"
                            android:layout_width="310dp"
                            android:layout_height="wrap_content"
                            android:minHeight="60dp"
                            android:text=""
                            android:layout_centerHorizontal="true"
                            android:textSize="9sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:background="@drawable/rectangle_18_copy_2"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:layout_width="344dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:background="@drawable/ic_card">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나와 비슷한 뷰티 크리에이터"
                            android:layout_marginBottom="7.5dp"
                            android:textColor="#4a494a"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <include layout="@layout/cell_user_camera_result" android:id="@+id/creator_1" />
                            <android.support.v4.widget.Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent"/>
                            <include layout="@layout/cell_user_camera_result" android:id="@+id/creator_2" />
                            <android.support.v4.widget.Space
                                android:layout_width="5dp"
                                android:layout_height="match_parent" />
                            <include layout="@layout/cell_user_camera_result" android:id="@+id/creator_3" />
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/BT_re_capture"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="12.5dp"
                        android:layout_marginLeft="12.5dp"
                        android:layout_marginTop="20dp"
                        android:text="다시 촬영하기"
                        android:textSize="14.5sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/rectangle_18_copy_2" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/IV_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</android.support.design.widget.CoordinatorLayout>