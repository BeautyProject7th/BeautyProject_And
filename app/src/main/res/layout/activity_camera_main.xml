<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/IV_grid"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_camera_guideline"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/TV_guide"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="정면을 바라보고 얼굴이 잘 보이도록\n 머리를 정리해주세요"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/BT_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:text="뒤로" />

    <Button
        android:id="@+id/BT_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="120dp"
        android:text="TIP" />

    <Button
        android:id="@+id/BT_guide_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"
        android:text="가이드 off" />

    <Button
        android:id="@+id/BT_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="10dp"
        android:text="앨범" />

    <Button
        android:id="@+id/BT_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="캡처" />
    <Button
        android:id="@+id/BT_camera_facing_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="10dp"
        android:text="전환" />
</FrameLayout>