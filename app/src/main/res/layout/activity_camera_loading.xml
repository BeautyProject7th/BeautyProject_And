<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_nothing" android:id="@+id/cs_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/IV_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?attr/actionBarSize">
            <Space
                android:layout_width="match_parent"
                android:layout_height="81dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/IV_pentagon"
                        android:layout_width="130dp"
                        android:layout_height="124dp"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:id="@+id/IV_makeup_example"
                        android:layout_width="105dp"
                        android:layout_height="122.8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true" />
                    <!--<ImageView-->
                    <!--android:id="@+id/IV_line"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@drawable/ic_line"-->
                    <!--android:layout_marginTop="80dp">-->
                    <!--</ImageView>-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_marginTop="73dp"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:id="@+id/IV_line"
                            android:visibility="visible"
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="@drawable/ic_line_camera"/>
                        <ImageView
                            android:id="@+id/IV_line_2"
                            android:visibility="visible"
                            android:layout_width="55dp"
                            android:layout_height="2dp"
                            android:background="@drawable/ic_line_camera"
                            android:layout_alignParentBottom="true"/>
                        <!--<ImageView-->
                        <!--android:id="@+id/IV_line"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="@drawable/ic_line"/>-->
                        <!--<ImageView-->
                        <!--android:id="@+id/IV_line_2"-->
                        <!--android:visibility="gone"-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="@drawable/ic_line"-->
                        <!--android:layout_alignParentBottom="true"/>-->
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#fc617e"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신의 얼굴을 인공지능 전문가가 분석 중이에요!"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="#4a494a"
                    android:layout_marginTop="28.5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수많은 얼굴형 연구를 통해 탄생한 인공지능"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#4a494a"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="얼굴 분석 전문가들의 끊임없는 연구가 더해져"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#4a494a"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인공지능 전문가는 계속 성장하고 있습니다."
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#4a494a"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>