<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <include layout="@layout/toolbar_dressing_table" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayBackGround">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/IV_user"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:id="@+id/TV_name"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user_name"
                        android:textColor="#000000"
                        android:layout_below="@id/IV_user"
                        android:layout_centerHorizontal="true"
                        android:textSize="16dp"/>
                    <Button
                        android:id="@+id/BT_cosmetic_upload"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="화장품 추가"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_ver2"
                        android:layout_below="@+id/TV_name"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/skin_care"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_11"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="스킨/케어"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cleansing"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_12"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="클렌징"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/mask_pack"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_17"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="마스크/팩"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/suncare"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/suncare"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="선케어"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/base_makeup"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_8"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="베이스 메이크업"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/eye_makeup"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="아이 메이크업"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/lip_makeup"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_13"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="립"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/body"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_5"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="바디"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/hair"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_18"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="헤어"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/nail"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_16"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="네일"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/perfume"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_6"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="향수"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/cosmetic_product"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_19"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="화장 소품"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/colorWhite"
                    android:padding="10dp">
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="31dp"
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:src="@drawable/group_14"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/man"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/group_7"/>
                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:textColor="@color/colorBlack"
                                android:text="남성 화장품"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal|bottom">
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/view_loading_indicator" android:id="@+id/indicator" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
