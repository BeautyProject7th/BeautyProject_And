<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <include layout="@layout/toolbar_only_back" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/BT_setting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/settings_copy"/>
        <Button
            android:id="@+id/BT_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라"/>
        <LinearLayout
            android:id="@+id/activity_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/IV_user"
                android:layout_marginTop="47.5dp"
                android:layout_marginBottom="17dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/group_6"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/TV_user_name"
                    android:text="name"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <!--<Button-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_marginLeft="3dp"-->
                    <!--android:background="@drawable/group_7"/>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="성 별" />
                <TextView
                    android:id="@+id/TV_user_sex"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayLine"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="성별" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="연 령" />
                <TextView
                android:id="@+id/TV_user_age"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrayLine"
                android:textSize="13sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/LL_skin_type"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="18.5dp">
                    <ImageView
                        android:id="@+id/IV_skin_type"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/TV_skin_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="#4a4a4a"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_1"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="18.5dp">

                    <ImageView
                        android:id="@+id/IV_skin_trouble_1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="#4a4a4a"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_2"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="18.5dp">
                    <ImageView
                        android:id="@+id/IV_skin_trouble_2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="#4a4a4a"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_trouble_3"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="18.5dp">
                    <ImageView
                        android:id="@+id/IV_skin_trouble_3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/TV_skin_trouble_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="#4a4a4a"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/BT_skin_type"
                        android:layout_width="157.5dp"
                        android:layout_height="40dp"
                        android:text="피부 타입 수정"
                        android:textSize="13.5sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rectangle"/>
                    <Button
                        android:id="@+id/BT_skin_trouble"
                        android:layout_marginLeft="15dp"
                        android:layout_width="157.5dp"
                        android:layout_height="40dp"
                        android:text="피부 고민 수정"
                        android:textSize="13.5sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rectangle"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <Button
                        android:id="@+id/BT_like_cosmetic"
                        android:layout_width="157.5dp"
                        android:layout_height="40dp"
                        android:text="찜한 화장품 보기"
                        android:textSize="13.5sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rectangle"/>
                    <Button
                        android:id="@+id/BT_like_video"
                        android:layout_marginLeft="15dp"
                        android:layout_width="157.5dp"
                        android:layout_height="40dp"
                        android:text="찜한 영상 보기"
                        android:textSize="13.5sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rectangle"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>