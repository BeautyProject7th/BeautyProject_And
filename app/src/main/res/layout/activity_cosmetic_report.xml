<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical" android:layout_width="match_parent"    android:layout_height="match_parent">    <android.support.design.widget.AppBarLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:theme="@style/AppTheme.AppBarOverlay"        android:id="@+id/appBarLayout2">        <include layout="@layout/toolbar_cosmetic_report" android:id="@+id/cs_toolbar" />    </android.support.design.widget.AppBarLayout>    <LinearLayout        android:id="@+id/whole"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:layout_below="@+id/appBarLayout2"        android:layout_alignParentStart="true">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="3"            android:background="#FFFFFF"            android:padding="10dp"            android:layout_margin="15dp"            android:gravity="center_vertical">            <ImageView                android:id="@+id/IV_product"                android:layout_width="120dp"                android:layout_height="120dp"                android:background="#555555"                android:layout_alignParentTop="true"                android:layout_alignParentStart="true" />            <LinearLayout                android:layout_alignTop="@+id/cosmetic_basic_input"                android:id="@+id/cosmetic_basic"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:orientation="vertical"                android:layout_toRightOf="@id/IV_product"                android:layout_marginLeft="10dp">                <TextView                    android:textColor="#000000"                    android:textSize="14sp"                    android:text="대분류"                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_alignParentBottom="true"                    android:layout_marginBottom="5dp"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text="중분류"                    android:textSize="14sp"                    android:textColor="#000000"                    android:layout_marginBottom="5dp"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text="브랜드"                    android:textSize="14sp"                    android:textColor="#000000"                    android:layout_marginBottom="5dp"/>                <TextView                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text="이름"                    android:textSize="14sp"                    android:textColor="#000000" />            </LinearLayout>            <LinearLayout                android:id="@+id/cosmetic_basic_input"                android:layout_centerVertical="true"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical"                android:layout_toRightOf="@id/cosmetic_basic">                <TextView                    android:id="@+id/TV_main_category"                    android:textColor="#000000"                    android:textSize="14sp"                    android:text=" : "                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:layout_alignParentBottom="true"                    android:layout_marginBottom="5dp"/>                <TextView                    android:id="@+id/TV_sub_category"                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text=" : "                    android:textSize="14sp"                    android:textColor="#000000"                    android:layout_marginBottom="5dp"/>                <TextView                    android:id="@+id/TV_brand"                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text=" : "                    android:textSize="14sp"                    android:textColor="#000000"                    android:layout_marginBottom="5dp"/>                <TextView                    android:id="@+id/TV_product_name"                    android:layout_width="wrap_content"                    android:layout_height="0dp"                    android:layout_weight="1"                    android:text=" : "                    android:textSize="14sp"                    android:textColor="#000000" />            </LinearLayout>        </RelativeLayout>        <LinearLayout            android:layout_marginLeft="30dp"            android:layout_marginRight="30dp"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="6"            android:orientation="vertical">            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center"                android:background="#FFFFFF"                android:padding="10dp"                android:textSize="14sp"                android:textColor="#000000"                android:text="위의 기존 화장품 정보 중\n어떤 정보가 부정확한지 체크해주시고\n수정 사항을 입력해주세요."/>            <LinearLayout                android:layout_marginTop="20dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <CheckBox                    android:id="@+id/CB_cos_img"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="화장품 사진"                    android:textSize="16sp"                    android:textColor="#000000"                    android:padding="10dp"                    android:textAlignment="center"                    android:layout_marginRight="10dp"                    android:background="#FFFFFF"/>                <CheckBox                    android:id="@+id/CB_cos_name"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="화장품 이름"                    android:textSize="16sp"                    android:textColor="#000000"                    android:padding="10dp"                    android:textAlignment="center"                    android:layout_marginLeft="10dp"                    android:background="#FFFFFF"/>            </LinearLayout>            <LinearLayout                android:layout_marginTop="10dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <CheckBox                    android:id="@+id/CB_category"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="카테고리 정보"                    android:textSize="16sp"                    android:textColor="#000000"                    android:padding="10dp"                    android:textAlignment="center"                    android:layout_marginRight="10dp"                    android:background="#FFFFFF"/>                <CheckBox                    android:id="@+id/CB_bra_name"                    android:layout_width="0dp"                    android:layout_weight="1"                    android:layout_height="wrap_content"                    android:text="브랜드 이름"                    android:textSize="16sp"                    android:textColor="#000000"                    android:padding="10dp"                    android:textAlignment="center"                    android:layout_marginLeft="10dp"                    android:background="#FFFFFF" />            </LinearLayout>            <EditText                android:id="@+id/ET_detail"                android:layout_marginTop="20dp"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:hint="자세한 사항을 작성해주세요.\n(최대 200글자)"                android:lines="4"                android:gravity="top"                android:maxLength="200"                android:textSize="14sp"                android:padding="10dp"                android:background="@drawable/edittext_review" />        </LinearLayout>        <Button            android:id="@+id/BT_send"            android:layout_margin="20dp"            android:layout_gravity="center_horizontal"            android:layout_width="130dp"            android:layout_height="0dp"            android:layout_weight="1"            android:text="전송"            android:textColor="#FFFFFF"            android:textSize="16sp"            android:background="@drawable/btn_circle" />    </LinearLayout></RelativeLayout>