<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorWhite"
    android:paddingLeft="22.5dp"
    android:paddingRight="15.5dp">
    <TextView
        android:id="@+id/TV_using"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="사용중"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"/>
    <Switch
        android:id="@+id/using_switch"
        android:layout_toRightOf="@+id/TV_using"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/BT_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/wastebasket"/>
    <ImageView
        android:id="@+id/BT_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14.5dp"
        android:layout_toLeftOf="@+id/BT_delete"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/pencil"/>
    <!--Button
        android:id="@+id/BT_delete"
        android:layout_width="13dp"
        android:layout_height="17.5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/wastebasket"/>
    <Button
        android:id="@+id/BT_modify"
        android:layout_width="17.5dp"
        android:layout_height="17.5dp"
        android:layout_marginRight="24.5dp"
        android:layout_toLeftOf="@+id/BT_delete"
        android:layout_centerVertical="true"
        android:background="@drawable/pencil"/-->
</RelativeLayout>