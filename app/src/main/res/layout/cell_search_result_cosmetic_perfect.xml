<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_search_result_cosmetic_perfect"
    android:orientation="vertical"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_card"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화장품 검색 결과"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#4a494a"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/IV_cosmetic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TV_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드명"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/TV_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#4a494a"
                android:maxLines="1"
                android:ellipsize="end"
                android:lineSpacingExtra="6sp"
                android:text="에코세이프티 노세범 썬크림"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/TV_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="6sp"
                android:text="18,000원"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RatingBar
                    android:id="@+id/RB_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true"
                    style="@style/RatingBar_small"/>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/TV_rate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.25"
                    android:textSize="11sp"
                    android:textColor="#fdc87f"/>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/TV_product_review_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="#9b9a9b"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>