<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" >

        <include layout="@layout/toolbar_skin_type" android:id="@+id/cs_toolbar" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="&quot;자신과 가장 흡사한 피부타입을 선택해주세요.&quot;"
            android:background="@color/colorExplainBackGround"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="31dp">
                <LinearLayout
                    android:id="@+id/LL_skin_type_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skin_type1"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/TV_skin_type_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="건성"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlackText"/>
                    <TextView
                        android:id="@+id/TV_skin_type_1_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:textColor="@color/colorBlackText"
                        android:text="&quot;유, 수분 둘다 부족&quot;"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_type_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="40dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skin_type2"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/TV_skin_type_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중성"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlackText"/>
                    <TextView
                        android:id="@+id/TV_skin_type_2_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:textColor="@color/colorBlackText"
                        android:text="&quot;유, 수분 둘다 양호&quot;"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/LL_skin_type_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skin_type3"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/TV_skin_type_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지성(일반)"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlackText"/>
                    <TextView
                        android:id="@+id/TV_skin_type_3_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:textColor="@color/colorBlackText"
                        android:text="&quot;유분 과다, 수분 양호&quot;"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_skin_type_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="40dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/skin_type4"
                        android:layout_marginBottom="15dp"/>
                    <TextView
                        android:id="@+id/TV_skin_type_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지성(수부지)"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlackText"/>
                    <TextView
                        android:id="@+id/TV_skin_type_4_explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.5dp"
                        android:textColor="@color/colorBlackText"
                        android:text="&quot;유분 과다, 수분 부족&quot;"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/view_loading_indicator" android:id="@+id/indicator" />

</android.support.design.widget.CoordinatorLayout>