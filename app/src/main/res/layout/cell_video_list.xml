<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@null"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/RR_cosmetic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/IV_video_img"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="#AAAAAA"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/IV_video_img"
            android:gravity="center">
            <TextView
                android:id="@+id/TV_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컨텐츠 제목"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/TV_content_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_content_title"
                android:text="게시일, 조회수"
                android:layout_marginBottom="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TV_content_info">
                <ImageView
                    android:id="@+id/IV_creator_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#AAAAAA"/>
                <TextView
                    android:id="@+id/TV_creator_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="크리에이터 이름"
                    android:layout_toRightOf="@id/IV_creator_img"
                    android:textSize="15dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/TV_creator_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="구독 : 000,000"
                    android:textSize="15dp"
                    android:layout_toRightOf="@id/IV_creator_img"
                    android:layout_below="@id/TV_creator_name"/>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/BT_reserve"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="담기"
        android:textSize="10dp"
        android:layout_below="@id/RR_cosmetic_info"
        android:background="@drawable/btn_circle"/>

    <Button
        android:id="@+id/BT_buy"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="구매"
        android:textSize="10dp"
        android:layout_below="@id/RR_cosmetic_info"
        android:layout_toRightOf="@id/BT_reserve"
        android:background="@drawable/btn_circle"/>


</RelativeLayout>