<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_search_result_cosmetic"
    android:orientation="vertical"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_base"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화장품 검색 결과"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#4a494a"/>
        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/BT_cosmetic_more"
            android:layout_width="40dp"
            android:layout_height="14.5dp"
            android:text="더보기"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="#a0a0a0"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <include layout="@layout/cell_cosmetic_have" android:id="@+id/LL_cosmetic_1"/>
            <Space
                android:layout_width="32dp"
                android:layout_height="match_parent" />
            <include layout="@layout/cell_cosmetic_have" android:id="@+id/LL_cosmetic_2"/>
            <Space
                android:layout_width="32dp"
                android:layout_height="match_parent" />
            <include layout="@layout/cell_cosmetic_have" android:id="@+id/LL_cosmetic_3"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>