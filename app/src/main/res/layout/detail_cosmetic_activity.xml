<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBackGround">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout2">
        <include layout="@layout/toolbar_only_back" android:id="@+id/cs_toolbar" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite">

            <!--<include layout="@layout/detail_about_user_cell" android:id="@+id/about_user_cell" />-->

            <ImageView
                android:id="@+id/IV_product"
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/TV_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드명"
                android:textSize="11sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="14dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/TV_main_category"
                    android:text="메인카테고리"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/colorGrayText"/>
                <TextView
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/colorGrayText"/>
                <TextView
                    android:id="@+id/TV_sub_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/colorGrayText"
                    android:text="서브카테고리"/>
            </LinearLayout>
            <TextView
                android:id="@+id/TV_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="상품명"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/TV_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="가격"
                android:gravity="center"
                android:textColor="#a1a1a1"
                android:textSize="10sp"
                android:layout_marginBottom="15dp"/>
            <!--나중에 만들지말고 이거 써-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:orientation="horizontal"
                android:background="@color/colorGrayBackGround">
                <LinearLayout
                    android:id="@+id/LL_adjust"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="38.5dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:gravity="center">
                    <Button
                        android:layout_width="17dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_adjust"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수정요청"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_buy"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="38.5dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp">
                    <Button
                        android:layout_width="17dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_buy"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_like"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="38.5dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp">

                    <Button
                        android:id="@+id/BT_like"
                        android:layout_width="17dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_heart_empty"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="찜"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LL_add"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="38.5dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="1dp">
                    <Button
                        android:id="@+id/BT_add"
                        android:layout_width="15dp"
                        android:layout_height="19dp"
                        android:background="@drawable/ic_add"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/TV_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="등록하기"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@null"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f2f2f2"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingTop="9dp">
                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="92dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ic_card"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/TV_rating_circle"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:background="@drawable/ic_oval"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/TV_rating_circle_people"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4a4a4a"
                            android:layout_marginTop="2dp"
                            android:textSize="9sp"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="16dp"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="61.5dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <android.support.v4.widget.Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                            </LinearLayout>
                            <Space
                                android:layout_width="6dp"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/V_rate_5_people"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#fc617e"/>
                            <Space
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/TV_rate_5_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#808080"
                                android:textSize="9sp"
                                android:text="0"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="61.5dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                            </LinearLayout>
                            <Space
                                android:layout_width="6dp"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/V_rate_4_people"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#fc617e"/>
                            <Space
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/TV_rate_4_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#808080"
                                android:textSize="9sp"
                                android:text="0"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="61.5dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                            </LinearLayout>
                            <Space
                                android:layout_width="6dp"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/V_rate_3_people"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#fc617e"/>
                            <Space
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/TV_rate_3_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#808080"
                                android:textSize="9sp"
                                android:text="0"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="61.5dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                                <Space
                                    android:layout_width="2dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>

                            </LinearLayout>
                            <Space
                                android:layout_width="6dp"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/V_rate_2_people"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#fc617e"/>
                            <Space
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/TV_rate_2_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#808080"
                                android:textSize="9sp"
                                android:text="0"/>
                        </LinearLayout>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="3dp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="61.5dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <Space
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_star"/>
                            </LinearLayout>
                            <Space
                                android:layout_width="6dp"
                                android:layout_height="match_parent" />
                            <View
                                android:id="@+id/V_rate_1_people"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="#fc617e"/>
                            <Space
                                android:layout_width="2dp"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/TV_rate_1_people"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#808080"
                                android:textSize="9sp"
                                android:text="0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/about_me"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_card"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/TV_my_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="나의 리뷰"
                        android:textSize="13sp"
                        android:textColor="#4a494a"/>

                    <TextView
                        android:id="@+id/TV_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/RB_rate"
                        android:layout_marginTop="16dp"
                        android:textColor="#ffcf40"
                        android:textSize="11sp"
                        android:text=""
                        android:layout_marginLeft="2dp"/>
                    <LinearLayout
                        android:id="@+id/LL_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="22.5dp"
                        android:layout_below="@id/TV_my_review"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구매일 "
                            android:textColor="#fc617e"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/TV_purchase_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 유통기한 "
                            android:textColor="#fc617e"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/TV_expiration_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorBlack"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/TV_review_mine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LL_info"
                        android:layout_marginLeft="22.5dp"
                        android:layout_marginTop="4dp"
                        android:textSize="10sp"
                        android:textColor="@color/colorBlack"
                        android:text=" ">
                    </TextView>
                    <RatingBar
                        android:id="@+id/RB_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        style="@style/RatingBar_yellow"
                        android:layout_alignTop="@+id/TV_rating"
                        android:layout_toEndOf="@+id/TV_my_review" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/ic_card"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천 영상"
                        android:textSize="13sp"
                        android:textColor="#4a494a"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TV_recommend_video"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="22.5dp"
                            android:layout_marginRight="22.5dp"
                            android:layout_marginBottom="15dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <include layout="@layout/cell_video" android:id="@+id/video_1" />

                                <android.support.v4.widget.Space
                                    android:layout_width="9dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/space" />

                                <include layout="@layout/cell_video" android:id="@+id/video_2" />
                            </LinearLayout>

                        </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_card"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="다른 사람의 리뷰"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textSize="13sp"
                        android:textColor="#4a494a"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="7.5dp"
                        android:layout_marginRight="7.5dp"
                        android:layout_marginBottom="8dp">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>