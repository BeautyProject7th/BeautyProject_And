<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_search_result_cosmetic_more"
    android:orientation="vertical"
    android:layout_width="344dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_card"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <ImageView
                android:id="@+id/IV_cosmetic"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/TV_cosmetic_have"
                android:layout_alignParentRight="true"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:text="보유"
                android:textSize="8sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/ic_have"
                android:visibility="invisible"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/TV_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브랜드명"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2.5dp"/>
            <TextView
                android:id="@+id/TV_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#4a494a"
                android:lineSpacingExtra="6sp"
                android:text="에코세이프티 노세범 썬크림"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/TV_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:textColor="#4a4a4a"
                android:lineSpacingExtra="6sp"
                android:text="18,000원"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RatingBar
                    android:id="@+id/RB_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true"
                    style="@style/RatingBar"/>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/TV_rate_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.25"
                    android:textSize="11sp"
                    android:textColor="#fdc87f"/>
                <Space
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/TV_product_review_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(246)"
                    android:textSize="10sp"
                    android:textColor="#9b9a9b"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="325dp"
            android:layout_height="1dp"
            android:background="@drawable/ic_line"/>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>